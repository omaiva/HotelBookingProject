@using Microsoft.AspNetCore.Identity
@using HotelBookingProject.Domain.Entities;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link" id="register" asp-controller="Admin" asp-action="Dashboard">Admin</a>
        </li>
    }
    <li class="nav-item dropdown">
        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Your account - @User.Identity!.Name
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li>
                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                    Logout
                </a>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link" id="register" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link" id="login" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
